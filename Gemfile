source 'https://rubygems.org'

gem 'chefspec'       # For ChefSpec testing
gem 'berkshelf'      # For managing cookbook dependencies
gem 'rspec'          # For running RSpec tests
gem 'fauxhai'        # For mocking Ohai data in ChefSpec
gem 'foodcritic'     # For linting Chef cookbooks
gem 'rubocop'        # For Ruby code style enforcement
gem 'test-kitchen'   # For integration testing
gem 'kitchen-vagrant' # For Vagrant driver in Test Kitchen